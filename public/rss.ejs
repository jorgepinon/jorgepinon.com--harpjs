<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title><%- site_title %></title>
    <link><%- site_url %></link>
    <description><%- description %></description>
    <atom:link href="<%- site_url %>/rss.xml" rel="self" type="application/rss+xml" />
    <% for(slug in public.posts._data) { %>
    <% 
      var post = public.posts._data[slug];
      var theDate = new Date(post.date);
      var pubDate = theDate.toUTCString();
    %>
      <item>
        <title><%- post.title %></title>
        <description><![CDATA[<%- partial("posts/" + slug) %>]]></description>
        <pubDate><%- pubDate %></pubDate>
        <link><%- site_url %>/posts/<%- slug %></link>
        <guid isPermaLink="true"><%- site_url %>/posts/<%- slug %></guid>
      </item>
    <% } %>
  </channel>
</rss>